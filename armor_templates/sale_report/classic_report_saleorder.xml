        <!-- job order  -->
        <template id="report_joborder_document">
            <div class="header">
                    <div class="row">
                        <img src="/armor_templates/static/src/img/armor_Logo.png"
                             style="display: block;right:auto;width:200px;height:120px;
position: absolute;
    top: 0px;
    right: 0px;"
                             alt="Logo"/>
                    </div>
                </div>
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>

                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row" id="informations">
                        <div style="width:20%">
                            <strong>Date:</strong>
                            <span t-esc="datetime.datetime.strptime(str(doc.date_order), '%Y-%m-%d %H:%M:%S').strftime('%d-%m-%Y')"/>
                        </div>
                        <div style="margin-left:110px;width:30%">
                            <strong>Date of Invoice:</strong>
                            <span t-esc="datetime.datetime.strptime(str(doc.confirmation_date), '%Y-%m-%d %H:%M:%S').strftime('%d-%m-%Y')"/>
                        </div>
                        <div style="margin-left:80px;width:20%"  t-if="doc.type_of_oil">
                            <strong>Type Of Oil:</strong>
                            <span t-field="doc.type_of_oil"/>
                        </div>
                    </div>
                    <div class="row" id="informations">
                        <div style="width:20%">
                            <strong>SO#:</strong>
                            <span t-field="doc.name"/>
                        </div>
                        <div style="margin-left:110px;width:30%">
                            <strong>Export to:</strong>
                            <t t-if="doc.partner_id.country_id">
                                <span  t-field="doc.partner_id.country_id.name"/>
                            </t>
                        </div>
                        <div style="margin-left:80px;width:20%">
                            <strong>Ref:</strong>
                            <span t-field="doc.ref"/>
                        </div>
                    </div>
                    <div class="row" id="informations">
                        <div t-if="doc.user_id.name" style="width:26%;">
                            <strong>Salesperson:</strong>
                            <span  t-field="doc.user_id"/>
                        </div>
                        <div style="margin-left:55px;width:30%;margin-right:40px;" t-if="doc.partner_id" >
                            <strong>CustomerCode:</strong>
                            <span t-field="doc.customer_sequence"/>
                        </div>
                    </div>
<br/>
                    <center>
                        <h2 style="color:blue;">
                            <span style="text-decoreport_joborderration: underline;">JOB ORDER</span>
                        </h2>
                    </center>

                    <!-- Is there a discount on at least one line? -->
                    <table class="table table-sm o_main_table border-black">
                        <thead>
                            <tr style="border:1px solid black;">
                                <th style="border-right:1px solid black;">#</th>
                                <th style="border-right:1px solid black;">Brand</th>
                                <th style="border-right:1px solid black;">Description</th>
                                <th style="border-right:1px solid black;">Mold</th>
                                <th style="border-right:1px solid black;">Color</th>
                                <th style="border-right:1px solid black;">Unit</th>
                                <th style="border-right:1px solid black;">Quantity</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="seq" t-value="1"/>

                            <t t-foreach="doc.order_line" t-as="line">

                                <tr style="border:1px solid black;">
                                    <td style="border-right:1px solid black;">
                                        <t t-esc="seq"/>
                                    </td>
                                    <td style="border-right:1px solid black;">
                                        <t t-foreach="line.product_id.attribute_value_ids" t-as="atribute">
                                            <t t-if="atribute.attribute_id.name=='Brand'">
                                                <span t-field="atribute.name"/>
                                            </t>
                                            <t t-if="atribute.attribute_id.name !='Brand'">
                                                <span></span>
                                            </t>
                                        </t>
                                    </td>
                                    <td style="border-right:1px solid black;">
                                        <span t-field="line.product_id.product_tmpl_id.name"/>
                                    </td>
                                    <td style="border-right:1px solid black;">
                                        <t t-foreach="line.product_id.attribute_value_ids" t-as="atribute">
                                            <t t-if="atribute.attribute_id.name=='Mold'">
                                                <span t-field="atribute.name"/>
                                            </t>
                                            <t t-if="atribute.attribute_id.name !='Mold'">
                                                <span></span>
                                            </t>
                                        </t>
                                    </td>
                                    <td style="border-right:1px solid black;">

                                        <t t-if="line.product_color_id">
                                            <span t-field="line.product_color_id.name"/>
                                        </t>
                                        <t t-if="not line.product_color_id">
                                            <spna></spna>
                                        </t>
                                    </td>
                                    <td style="border-right:1px solid black;">
                                        <t t-foreach="line.product_id.attribute_value_ids" t-as="atribute">
                                            <t t-if="atribute.attribute_id.name=='Size'">
                                                <span t-field="atribute.name"/>
                                            </t>
                                            <t t-if="atribute.attribute_id.name !='Size'">
                                                <span></span>
                                            </t>
                                        </t>
                                    </td>
                                    <td style="border-right:1px solid black;">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <t t-set="seq" t-value="seq+1"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <p t-field="doc.joborder_note"/>

                    <table width="100%" border="0">
                        <tr style="border-top:none;border-bottom:none;">
                            <td align="left" style="width:35%;font-size:15px;padding-left:15px;">Prepared By:
                            </td>
                            <td align="center" style="font-size:15px;">Checked By:
                            </td>
                            <td align="right" style="width:35%;font-size:15px;">Approved By:
                            </td>
                        </tr>
                        <tr>
                            <td align="left" style="width:35%;">
                                <hr style="width:35%;"/>
                            </td>

                            <td align="center" style="width:35%;">
                                <hr style="width:35%;"/>
                            </td>
                            <td align="right" style="width:35%;">
                                <hr style="width:35%;"/>
                            </td>
                        </tr>
                    </table>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>


